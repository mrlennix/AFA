<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.food.abstractfood.FoodActivity"

    >

    <android.support.v4.view.ViewPager
        android:id="@+id/food_page_view_pager"
        android:layout_height="200dp"
        android:layout_width="match_parent"


        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/abstract_foods_default_pp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List View"
        android:id="@+id/listViewBtn"
        android:layout_alignParentBottom="true"
        android:background="#FF99CC00"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step View"
        android:id="@+id/button9"
        android:background="#FF99CC00"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Description"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:background="#FFF"
        android:layout_alignEnd="@+id/button9" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView4"
        android:background="@null"
        android:src="@drawable/smileyf"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView5"
        android:src="@drawable/puker"
        android:layout_below="@+id/textView8"
        android:layout_toStartOf="@+id/textView13"
        android:background="#FFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:id="@+id/reportBtn"
        android:background="#FF99CC00"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/imageView4"
        android:background="#FFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Posted"
        android:id="@+id/textView11"
        android:layout_above="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:background="@null"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/imageView4"
        android:background="@null"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="20"
        android:id="@+id/textView13"
        android:background="@null"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />


</RelativeLayout>
