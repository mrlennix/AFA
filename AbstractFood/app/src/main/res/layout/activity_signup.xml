<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.food.abstractfood.SignupActivity"

        >
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username_signup"
        android:hint="Username"
        android:layout_marginTop="36dp"

        android:layout_below="@+id/addprofilepicture"
        android:layout_alignStart="@+id/email_signup" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_signup"
            android:hint="Email Address"
            android:layout_below="@+id/username_signup"
            android:layout_alignStart="@+id/passwordtxt" />



    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/passwordtxt"
            android:layout_below="@+id/email_signup"
            android:layout_alignStart="@+id/verifyPasswordtxt" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Verify Password"
        android:id="@+id/verifyPasswordtxt"
        android:layout_below="@+id/passwordtxt"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:clickable="true"
        android:id="@+id/cancel_signup"

        android:layout_marginTop="41dp"
        android:layout_below="@+id/verifyPasswordtxt"
        android:layout_toStartOf="@+id/textView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/signup"
        android:onClick="stuff"

        android:layout_alignTop="@+id/cancel_signup"
        android:layout_alignEnd="@+id/verifyPasswordtxt" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:id="@+id/addprofilepicture"
        android:src= "@drawable/addprofilepicture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Image"
        android:id="@+id/textView12"
        android:layout_above="@+id/username_signup"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
