<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.food.abstractfood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/login"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FoodActivity"
            android:label="@string/food" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".ReportActivity"
            android:label="@string/Report" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/signup" />
        <activity
            android:name=".DiscoverActivity"
            android:label="@string/discover" />
        <activity android:name=".Home"
            android:label="@string/Home"/>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".UploadActivity" />
        <activity
            android:name=".ChangePassword"
            android:label="@string/change_passowrd" />
        <activity
            android:name=".IngredientAdderActivity"
            android:label="@string/title_activity_ingredient_adder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddRecipeActivity" />

    </application>

</manifest>